generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  STAFF
}

enum SaleChannel {
  LOCAL
  DELIVERY
}

model Restaurant {
  id         String      @id @default(cuid())
  name       String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  users      User[]
  products   Product[]
  costs      ProductCost[]
  fixedCosts FixedCost[]
  sales      Sale[]
}

model User {
  id           String     @id @default(cuid())
  restaurantId String
  email        String     @unique
  passwordHash String
  role         UserRole
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
}

model Product {
  id           String      @id @default(cuid())
  restaurantId String
  name         String
  category     String?
  price        Int
  active       Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  cost         ProductCost?
  sales        Sale[]

  @@index([restaurantId])
}

model ProductCost {
  id              String     @id @default(cuid())
  restaurantId    String
  productId       String     @unique
  rawMaterialCost Int
  packagingCost   Int        @default(0)
  deliveryFeePct  Int        @default(0)
  variableCostAdj Int        @default(0)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  restaurant      Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  product         Product    @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
}

model FixedCost {
  id           String     @id @default(cuid())
  restaurantId String
  name         String
  amount       Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
}

model Sale {
  id           String      @id @default(cuid())
  restaurantId String
  productId    String
  date         DateTime
  quantity     Int
  channel      SaleChannel
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  product      Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
  @@index([productId])
  @@index([date])
}
